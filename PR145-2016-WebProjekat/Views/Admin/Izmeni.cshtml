
@{
    ViewBag.Title = "Izmeni";
}

<h2>Izmeni</h2>

<head>
    <link href="@Url.Content("~/Content/Domacin.css")" rel="stylesheet" type="text/css" />
</head>

<form action="~/Admin/Sacuvaj" method="post">
    <table>
        <tr>
            <td>Type:</td>
            <td>
                <select name="Tip">
                    <option value="CeoApartman">Apartman</option>
                    <option value="Soba">Room</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>Number of room</td>
            <td><input type="number" name="BrojSoba" value="@ViewBag.a.BrojSoba" required/></td>
        </tr>
        <tr>
            <td>Number of guest</td>
            <td><input type="number" name="BrojGostiju" value="@ViewBag.a.BrojGostiju" required/></td>
        </tr>
        <tr>
            <td>Geographical width:</td>
            <td><input type="number" name="GeografskaSirina" value="@ViewBag.a.Lokacija.GeografskaSirina" required/></td>
        </tr>
        <tr>
            <td>Geographical length:</td>
            <td><input type="number" name="GeografskaDuzina" value="@ViewBag.a.Lokacija.GeografskaDuzina" required/></td>
        </tr>

        <tr>
            <td>Streat:</td>
            <td><input type="text" name="Ulica" value="@ViewBag.a.Lokacija.Adresa.Ulica" required/></td>
        </tr>
        <tr>
            <td>Number:</td>
            <td><input type="number" name="Broj" value="@ViewBag.a.Lokacija.Adresa.Broj" required/></td>
        </tr>
        <tr>
            <td>City:</td>
            <td><input type="text" name="NaseljenoMesto" value="@ViewBag.a.Lokacija.Adresa.NaseljenoMesto" required/></td>
        </tr>
        <tr>
            <td>Poste Code:</td>
            <td><input type="number" name="PostanskiBroj" value="@ViewBag.a.Lokacija.Adresa.PostanskiBroj" required/></td>
        </tr>
        <tr>
            <td>Available Date:</td>
            <td><input type="date" name="DatumiDostupnost" value="@ViewBag.a.DatumiDostupnost[0].ToString("yyyy-MM-dd")" /></td>
        </tr>
        <tr>
            <td>Check in Time:</td>
            <td><input type="time" name="VremePrijave" value="@ViewBag.a.VremePrijave" required/></td>
        </tr>
        <tr>
            <td>Check out Time:</td>
            <td><input type="time" name="VremeOdjave" value="@ViewBag.a.VremeOdjave" required/></td>
        </tr>
        <tr>
            <td>Price for Night:</td>
            <td><input type="number" name="CenaPoNoci" value="@ViewBag.a.CenaPoNoci" required/></td>
        </tr>

        <tr>
            <td>Amenities:</td>
            <td>
                @{foreach (var item in ViewBag.basic)
                    {
                        <input type="checkbox" name="@item.Naziv" /> @item.Naziv
                    }}
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @{foreach (var item in ViewBag.family)
                    {
                        <input type="checkbox" name="@item.Naziv" /> @item.Naziv
                    }}
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                @{foreach (var item in ViewBag.dining)
                    {
                        <input type="checkbox" name="@item.Naziv" /> @item.Naziv
                    }}
            </td>
        </tr>

        
        <tr>
            <td><input type="hidden" name="idap" value="@ViewBag.a.Id" /></td>
            <td><input type="hidden" name="slap" value="@ViewBag.a.Slike[0]" /></td>
            <td><input type="submit" value="Change Apartman" /></td>

        </tr>
    </table>
</form>